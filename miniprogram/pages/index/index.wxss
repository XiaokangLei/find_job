/* miniprogram/pages/index/index.wxss */
/* 日程内容 */

.product {
  background-color: white;
  margin: 18rpx 20rpx 18rpx;
  -moz-box-shadow: 2rpx 2rpx 5rpx #969696;
  -webkit-box-shadow: 2rpx 2rpx 5rpx #969696;
  box-shadow: 4rpx 4rpx 10rpx #969696;
  border-radius: 8px;
}

.prod-content_title {
  display: flex;
  justify-content: space-between;
  font-size: 10pt;
  padding: 6rpx;
  background-color: #85c4ff;
  border-radius: 9px 9px 0px 0px;
}
.prod-title {
  color: white;
  font-size: 18pt;
}
.prod-title_right {
  color: #919191;
  font-size: 8pt;
  /* float: right; */
}

.prod-content_title image {
  height: 55rpx;
  width: 55rpx;
}

.prod-content {
  display: flex;
  /* justify-content: space-between; */
  font-size: 10pt;
  color: #5c5c5c;
  /* width: 80%; */
  /* flex-wrap:wrap; */
  padding: 6rpx;
  margin: 0rpx 0rpx 0rpx 14rpx;
  /* float: left; */
}

.prod-content image {
  
  padding: 1rpx;
  height: 36rpx;
  width: 36rpx;
  margin: 2rpx 6rpx 0rpx 2rpx;
}

.meetingBox {
  width: 100%;
  height: 80rpx;
  background-color: #e7ebed;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #f03a36;
  font-size: 29rpx;
}

.countdownBox {
  width: 100%;
  height: 80rpx;
  background-color: #e7ebed;
  display: flex;
  justify-content: center;
  align-items: center;
  color: red;
  font-size: 30rpx;
}

.countdownBox .item {
  height: 50rpx;
  background-color: #fff;
  border-radius: 6px;
  color: red;
  box-sizing: border-box;
  padding: 0rpx 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 480;
  margin: 0rpx 10rpx;
}

.weui-footer{
    margin-bottom: 50px;
}
.weui-footer_fixed-bottom{
    margin-bottom: 0;
}
/* 返回顶部 */
.goTop{
  height: 70rpx;
  width: 70rpx;
  position: fixed;
  bottom: 80rpx;
  /* background: rgba(0,0,0,.3); */
  right: 48rpx;
  border-radius: 50%;
 }

 .tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}